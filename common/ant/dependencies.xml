<project name="Facelet Dependencies" basedir=".">

    <property name="facelets.build.home" 
              value="${basedir}/../.."/>
    <property name="http.proxy.host" value=""/>
    <property name="http.proxy.port" value=""/>

    <taskdef resource="net/sf/antcontrib/antlib.xml">
        <classpath>
            <pathelement
                  location="${facelets.build.home}/common/lib/ant-contrib.jar"/>
        </classpath>
    </taskdef>

    <!-- 
        Current Dependencies
           el-api 1.0
           el-impl 1.0
           jsf-api 1.2
           portlet-api 1.0
           servlet-api 2.4
           Maven java.net repository importer 1.2
    -->

    <property name="dependency.base.dir" 
              value="${facelets.build.home}/dependencies"/>
    <property name="el-api.version" value="1.0"/>
    <property name="el-impl.version" value="1.0"/>
    <property name="jsf-api.version" value="1.2"/>
    <property name="portlet-api.version" value="1.0"/>
    <property name="servlet-api.version" value="2.4"/>
    <property name="maven.repository.importer.version" value="1.2"/>
    <property name="el-api.jar" 
              value="${dependency.base.dir}/el-api-${el-api.version}.jar"/>
    <property name="el-impl.jar" 
              value="${dependency.base.dir}/el-impl-${el-impl.version}.jar"/>
    <property name="jsf-api.jar" 
              value="${dependency.base.dir}/jsf-api-${jsf-api.version}.jar"/>
    <property name="portlet-api.jar" 
              value="${dependency.base.dir}/portlet-api-${portlet-api.version}.jar"/>
    <property name="servlet-api.jar" 
              value="${dependency.base.dir}/servlet-api-${servlet-api.version}.jar"/>
    <property name="maven.repository.importer.jar" 
              value="${dependency.base.dir}/maven.repository.importer-${maven.repository.importer.version}.jar"/>

    <target name="update" description="Download project dependencies">
        <!-- setup the proxy if necessary -->
        <if>
            <and>
                <length string="${http.proxy.host}" when="greater" length="0"/>
                <length string="${http.proxy.port}" when="greater" length="0"/>
            </and>
            <then>
                <setproxy proxyhost="${http.proxy.host}"
                          proxyport="${http.proxy.port}"/>
            </then>
        </if>

        <mkdir dir="${dependency.base.dir}"/>

        <!-- el-api -->
        <if>
            <not>
                <available file="${el-api.jar}"
                           property="ignored"/>
            </not>
            <then>
                <get src="https://maven-repository.dev.java.net/nonav/repository/javax.el/jars/el-api-${el-api.version}.jar"
                     dest="${el-api.jar}"
                     usetimestamp="true"/>
            </then>
        </if>

        <!-- el-impl -->
        <if>
            <not>
                <available file="${el-impl.jar}"
                           property="ignored"/>
            </not>
            <then>
                <get src="https://maven-repository.dev.java.net/nonav/repository/el-impl/jars/el-impl-${el-impl.version}.jar"
                     dest="${el-impl.jar}"
                     usetimestamp="true"/>
            </then>
        </if>

        <!-- jsf-api -->
        <if>
            <not>
                <available file="${jsf-api.jar}"
                           property="ignored"/>
            </not>
            <then>
                <get src="https://maven-repository.dev.java.net/nonav/repository/javax.faces/jars/jsf-api-${jsf-api.version}.jar"
                     dest="${jsf-api.jar}"
                     usetimestamp="true"/>
            </then>
        </if>

        <!-- portlet-api -->
        <if>
            <not>
                <available file="${portlet-api.jar}"
                           property="ignored"/>
            </not>
            <then>
                <get src="http://mirrors.ibiblio.org/pub/mirrors/maven2/portlet-api/portlet-api/${portlet-api.version}/portlet-api-${portlet-api.version}.jar"
                     dest="${portlet-api.jar}"
                     usetimestamp="true"/>
            </then>
        </if>

        <!-- servlet-api -->
        <if>
            <not>
                <available file="${servlet-api.jar}"
                           property="ignored"/>
            </not>
            <then>
                <get src="http://mirrors.ibiblio.org/pub/mirrors/maven2/servletapi/servlet-api/${servlet-api.version}/servlet-api-${servlet-api.version}.jar"
                     dest="${servlet-api.jar}"
                     usetimestamp="true"/>
            </then>
        </if>

        <!-- MAVEN REPOSITORY IMPORTER -->
        <if>
            <not>
                <available file="${maven.repository.importer.jar}"
                           property="ignored"/>
            </not>
            <then>
                <get src="https://maven-repository.dev.java.net/nonav/repository/com.sun.wts.tools.mri/jars/maven-repository-importer-${maven.repository.importer.version}.jar"
                     dest="${maven.repository.importer.jar}"
                     usetimestamp="true"/>

            </then>
        </if>



    </target>

</project>
